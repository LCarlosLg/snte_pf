<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background">

    <!-- Contenedor principal centrado -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="24dp"
        android:layout_centerInParent="true">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center_horizontal" />

        <!-- Título -->
        <TextView
            android:text="Bienvenido a Mueblería SNTE"
            android:textSize="22sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Campo de correo -->
        <EditText
            android:id="@+id/etCorreo"
            android:inputType="textEmailAddress"
            android:hint="Correo electrónico"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="yes"
            android:autofillHints="emailAddress" />

        <!-- Campo de contraseña -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edContrasenia"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="password"
                android:background="@drawable/edit_text_bg"
                android:hint="Contraseña"
                android:importantForAutofill="yes"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Icono para mostrar/ocultar contraseña -->
            <ImageView
                android:id="@+id/ivShowPassword"
                android:src="@drawable/ic_eye_off"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primary_text"/>
        </LinearLayout>

        <!-- Checkboxes para seleccionar el rol -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <CheckBox
                android:id="@+id/cbEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empleado"
                android:layout_marginEnd="16dp"/>

            <CheckBox
                android:id="@+id/cbCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente"/>

        </LinearLayout>

        <!-- Botón para iniciar sesión -->
        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:background="@color/orange"/>

        <!-- Texto para redirección al registro -->
        <TextView
            android:text="¿No tienes cuenta?"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Enlace para ir al registro -->
        <TextView
            android:id="@+id/tvRegistro"
            android:text="Regístrate aquí"
            android:textSize="16sp"
            android:textColor="#0623F1"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>




