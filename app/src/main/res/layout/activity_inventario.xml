<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/naranjaFondo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar de la parte superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/naranjaOscuro"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Inventario"
        app:titleTextColor="@color/blanco" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Ya no necesitas botón de regreso, lo maneja el Toolbar -->
                <EditText
                    android:id="@+id/etId"
                    android:hint="ID"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp" />

                <EditText
                    android:id="@+id/etNombre"
                    android:hint="Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp" />

                <EditText
                    android:id="@+id/etPrecio"
                    android:hint="Precio"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp" />

                <EditText
                    android:id="@+id/etStock"
                    android:hint="Stock"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp" />

                <EditText
                    android:id="@+id/etCategoria"
                    android:hint="Categoría"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnAgregar"
                        android:text=" Agregar"
                        android:drawableStart="@drawable/ic_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/naranjaPrimario"
                        android:textColor="@color/blanco"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="12dp" />

                    <Button
                        android:id="@+id/btnActualizar"
                        android:text=" Actualizar"
                        android:drawableStart="@drawable/ic_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/naranjaOscuro"
                        android:textColor="@color/blanco"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="12dp" />

                    <Button
                        android:id="@+id/btnEliminar"
                        android:text=" Eliminar"
                        android:drawableStart="@drawable/ic_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@color/blanco"
                        android:paddingHorizontal="12dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lvInventario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
