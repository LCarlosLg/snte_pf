<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_largo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Card con fondo redondeado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- Nombres -->
            <EditText
                android:id="@+id/edNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:inputType="textPersonName"
                android:textColor="@color/brown"
                android:minHeight="48dp"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/edit_text" />

            <!-- Apellidos -->
            <EditText
                android:id="@+id/edApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:textColor="@color/brown"
                android:minHeight="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Correo -->
            <EditText
                android:id="@+id/edCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColor="@color/brown"
                android:minHeight="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/edContraseña"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/brown"
                    android:minHeight="48dp"
                    android:background="@android:drawable/edit_text" />

                <ImageButton
                    android:id="@+id/btnMostrarContraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_view"
                    android:contentDescription="Mostrar Contraseña"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Confirmar Contraseña -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edConfirmarContrasena"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Confirmar Contraseña"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:background="@android:drawable/edit_text" />

                <ImageButton
                    android:id="@+id/btnMostrarConfirmarContraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_view"
                    android:contentDescription="Mostrar Confirmar Contraseña"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Teléfono -->
            <EditText
                android:id="@+id/edTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"
                android:textColor="@color/brown"
                android:minHeight="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarme"
                android:textSize="18sp"
                android:textColor="@color/yellow"
                android:backgroundTint="@color/red"
                android:minHeight="48dp"
                android:layout_marginTop="24dp" />

            <!-- Botón Regresar -->
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textColor="@color/yellow"
                android:backgroundTint="@color/brown"
                android:minHeight="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
